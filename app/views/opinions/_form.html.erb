
<%= simple_form_for(@opinion) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :Text, label: "What's your opinion", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Share your opinion...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
  <% end %>