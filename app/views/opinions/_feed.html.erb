<div class="column is-half">
<% if user_signed_in? %>
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
				<img src="https://bulma.io/images/placeholders/64x64.png"
			</p>
		</figure>
		<div class="media-content">
			 <%= render 'opinions/form' %>
		</div>
	</article>
<% end %>
<% @opinions.each do | opinion | %>
  <div class="box">
  	<article class="media">
  		<div class="media-left">
  			<figure class="image is-64x64">
              <img src="https://bulma.io/images/placeholders/64x64.png"
  			</figure>
  		</div>
  		<div class="media-content">
  			<div class="content">
  				<strong><%= opinion.author.username %></strong><br />
  				<small><%= opinion.author.fullname %></small><br/>
  				<p><%= opinion.Text %></p>
  			</div>
			<% if user_signed_in? %>
  			<nav class="level">
  				<div class="level-left is-mobile">
  					<%= link_to opinion, class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to edit_opinion_path(opinion), class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to opinion, method: :delete, data: { confirm: "Are you sure you want to delete this opinion?" } do %>
  							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
  					<% end %>
  				</div>
  			</nav>
			<% end %>
  		</div>
  	</article>
  </div>
<% end %>
</div>