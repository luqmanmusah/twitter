<section class="section">
<div class="container">
<div class="columns">
<div class="column is-one-quarter" >
	<nav class="panel" id="profile">
		
		<div class="panel-block">
		<%= link_to user_path(current_user) do %>
			<article class="media">
				<div class="media-left">
					<figure class="image is-64x64">
						<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.username) %>
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p>
							
							<small><%= current_user.fullname %></small>
						</p>
					</div>
				</div>
			</article>
		<% end %>
		</div>
		<div class="panel-block">
			<div class="level is-mobile">
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Opinions</p>
						<p class="title is-6"><%= current_user.opinions.count %></p>
					</div>
				</div>
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Following</p>
						<p class="title is-6"><%= current_user.followed_users.count %></p>
					</div>
				</div>
					<div class="level-item has-centered-text">
					<div>
						<p class="heading">Followers</p>
						<p class="title is-6"><%= current_user.followers.count %></p>
					</div>
				</div>
			</div>
		</div>
		<div class="menu">
		<ul class="menu-list">
			
			<%= link_to 'Home', root_path, class: "mb-3 pl-1" %>
			<%= link_to 'People', users_path, class: "mb-3 pl-1" %>
			
		</div>
  		</ul>
	</nav>
</div>

<div class="column is-half">
    
			<figure class="is-fullwidth">
            <% if @user.photo.attached? %>
				<img src="<%= url_for(@user.photo) %>" >
			<% else %>
			<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.username) %>
			<% end %>

			</figure>

            <div class="card-body">
                <h6 class="pb-0 mb-0"><%= link_to 'My Opinions', user_path(@user), class: "text-dark font-weight-bolder pl-3" %></h6><hr>
                <div class= "text-muted">
                    <% @user.opinions.each do |opinion| %>
                        <div class="card-body text-muted">
                            <p class="fsz text-muted"> <%= opinion.Text %> <span><%= link_to 'Delete', opinion_path(opinion), method: :delete, class: 'btn btn-primary btn-sm ml-5 fsz-2' %></span></p>
                        </div><hr>
                    <% end %>
                </div>
            </div>
</div>

<div class="column is-one-quarter">
        
            <div class="column">

                    <%= gravatar_image_tag(current_user.email, class: "center") %>

                <p class="font-weight-bold"> <%= @user.username %></p>
                
            </div>
            <div class="columns">
            <div class="column">
            <p> <%= @user.opinions.length %> </p>
            <p> Opinions </p>
            </div>

            <div class="column">
            <p> <%= @user.followed_users.length %> </p>
            <p> Following </p>
            </div>

            <div class="column">
            <p> <%= @user.followers.length %> </p>
            <p> Followers </p>
            </div>
        </div>
        <div class="column">
            <div class="card-header pb-0">
                <p>Followed By</p>
            </div>
                <div class="card-body">
                    <% @user.followers.each do |user| %>
                        <div class="card-body d-flex py-0">

                            <%= gravatar_image_tag(current_user.email, class: "f-by-img rounded-circle") %>

                        <h4 class="font-weight-bolder ml-3 pt-3 fsz"> <%= user.username %> </h4>
                        </div><hr>
                    <% end %>
                </div>

        </div>
</div>


</div>
</div>
</section>