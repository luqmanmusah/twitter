<section class="section">

  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        
      <h2 class="title is-2">Edit <%= @user.to_s.humanize %></h2>
      <%= simple_form_for(@user, url: update_profile_users_path, html: { method: :put }) do |f| %>
        <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :username, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :fullname, required: true,  input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :email, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
          
        <div class="mb-3">
        <%= f.file_field :photo, class:"form-control" %>
        </div>
   
        <%= f.button :submit, "Update", class:"button is-info" %>
     
      <% end %>
   
      </div>
    </div>
  </div>
</section>